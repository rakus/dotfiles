if [ -n "$UFF_CMD" ]; then
# Shortcut to open files/directories
#  -- bin halt en Roihess
function uff
{
    case $# in
        0) echo >&2 "Usage: uff file [file...]"
            return 1
            ;;
        1)
            "$UFF_CMD" "$1"
            ;;
        *)
            for f in "$@"; do
                uff "$f"
            done
            ;;
    esac
}
else
    function uff
    {
        echo >&2 ""
        echo >&2 "  No tool for opening files found -- sorry"
        echo >&2 ""
        return 1
    }
fi


