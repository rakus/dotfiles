ff()
{
    if [ $# -ne 1 ]; then
        echo "Usage: ff <filepattern>"
        return 1
    fi
    length=$(($#-1))
    searchDirs=( "${@:1:$length}" )
    name="${!#}"

    if [ ${#searchDirs[@]} -eq 0 ]; then
        find . -iname "$name"
   else
        find "${searchDirs[@]}" -iname "$name"
   fi
}
#alias   ff='find . -iname'

#ffg -i hallo *.vim
ffg()
{
    if [ $# -lt 2 ]; then
        echo "Usage: ffg <grep-parammeter> <filepattern>"
        return 1
    fi
    length=$(($#-1))
    grepargs=( "${@:1:$length}" )
    fn="${!#}"

    find . -iname "$fn" -exec grep "${grepargs[@]}" {} /dev/null \;
}

