#alias fq="readlink -f"
if type off-readlink >/dev/null 2>&1; then
    alias fq="readlink -f"
else
    function fq
    {
        local arg
        for arg in "$@"; do
            if [ -d "$arg" ]; then
                (cd "$arg" && pwd)
                [ $? -ne 0 ] && return 1
            else
                (fq "$(dirname "$arg")" | tr -d '\n'  && echo "/$(basename "$arg")")
                [ $? -ne 0 ] && return 1
            fi
        done
        return 0
    }
fi

function fqc
{
    #fq "$@" | xclip -f -selection clipboard
    local f="$(fq "$@")"
    printf "%s" "$f" | xclip -selection clipboard
    echo "$f"
}

#alias clipboard="xclip -selection clipboard"

function clipboard
{
    if [ $# -gt 0 ]; then
        echo -n "$@" | xclip -f -selection clipboard
        echo
    else
        xclip -f -selection clipboard
    fi
}


