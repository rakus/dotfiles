# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.
#
# shellcheck shell=sh

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
umask 022
#umask 077

. /etc/profile

export GDK_NATIVE_WINDOWS=1

EDITOR=vi
VISUAL=vim

ulimit -n 4096
ulimit -c unlimited

#
#export LANG=de_DE.utf8
export LANGUAGE=en
export LC_CTYPE=en_US.utf8
export LC_NUMERIC=de_DE.utf8
export LC_TIME=de_DE.utf8
export LC_COLLATE=C
export LC_MONETARY=de_DE.utf8
export LC_MESSAGES=en_US.utf8
export LC_PAPER=de_DE.utf8
export LC_NAME=de_DE.utf8
export LC_ADDRESS=de_DE.utf8
export LC_TELEPHONE=de_DE.utf8
export LC_MEASUREMENT=de_DE.utf8
export LC_IDENTIFICATION=de_DE.utf8
export LC_ALL=

if [ -f "$HOME/.profile_private" ]; then
    # Must export USER_FULL_NAME & USER_EMAIL (used below)
    . "$HOME/.profile_private"
fi

if [ -n "$USER_FULL_NAME" ]; then
    # this variable is used by the eclipse plugin fullusername
    export ECLIPSE_AUTHOR="$USER_FULL_NAME"
fi

#if [ -n "$USER_FULL_NAME" ] && [ -n "$USER_EMAIL" ]; then
#    export GIT_AUTHOR_NAME="$USER_FULL_NAME"
#    export GIT_COMMITTER_NAME="$USER_FULL_NAME"
#    export GIT_COMMITTER_EMAIL="$USER_EMAIL"
#    export GIT_AUTHOR_EMAIL="$USER_EMAIL"
#fi


# if running bash
#if [ -n "$BASH_VERSION" ]; then
#    # include .bashrc if it exists
#    if [ -f "$HOME/.bashrc" ]; then
#        . "$HOME/.bashrc"
#    fi
#fi


# Cleanup path for Fedora
if [ "$(readlink -f /bin)" = "/usr/bin" ]; then
    PATH="$(echo ":$PATH:" | sed 's|:/usr/bin:|:/bin:|g;s/^::*//;s/::*$//')"
fi
if [ "$(readlink -f /sbin)" = "/usr/sbin" ]; then
    PATH="$(echo ":$PATH:" | sed 's|:/usr/sbin:|:/sbin:|g;s/^::*//;s/::*$//')"
fi

if [ -d "/opt/vim/bin" ] ; then
    PATH="/opt/vim/bin:$PATH"
fi

# set PATH to include user's private bin dirs
if [ -d "$HOME/local/bin" ] ; then
    PATH="$HOME/local/bin:$PATH"
fi
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi
if [ -d "$HOME/sbin" ] ; then
    PATH="$HOME/sbin:$PATH"
fi

if [ -d "$HOME/.gem/ruby/bin" ]; then
    PATH="$PATH:$HOME/.gem/ruby/bin"
fi

# Setup rust / rustup
if [ -e "$HOME/.cargo/env" ]; then
    . "$HOME/.cargo/env"
fi

if [ -n "$DISPLAY" ]; then
    if [ -f "$HOME/.Xmodmap" ] ; then
        /usr/bin/xmodmap "$HOME/.Xmodmap"
    fi

    # set the Unity "show-hud" shortcut to my liking
    #gsettings set "org.compiz.integrated" "show-hud" "['<Super>h']"
fi

#export LANG="de_DE.utf8"
#export LANGUAGE="en"
